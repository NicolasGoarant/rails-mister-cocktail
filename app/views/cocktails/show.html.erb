<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> of <%= dose.ingredient.name %> - <%= link_to 'Delete', dose_path(dose), method: :delete %></li>
  <% end %>
</ul>

<%= cl_image_tag @article.photo, height: 300, width: 400, crop: :fill %>

<%= link_to 'See all cocktails', cocktails_path %>
<%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %>
